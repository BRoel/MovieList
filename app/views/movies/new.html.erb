<h1>New Movie List</h1>

<%= form_for(@movie) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :rating %>
    <%= f.select :rating, ['G', 'PG', 'PG-13', 'R', 'NR']%>
    <br>
    <%= f.label :release_date %>
    <%= f.date_field :release_date %>
    <br>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <br>
    <%= f.submit %>
<% end %>